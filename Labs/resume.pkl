// Additional PKL specifications for common résumé sections

class Account {
     name: String
     label: String
     image: String
     email: String
     phone: String
     url: String
     summary: String
     location: Location
     profiles: List<Profile>
}

class Resume {
    account: Account
    work: List<Work>
    education: List<Education>
    projects: List<Project>
    skills: List<Skill>
    awards: List<Award>
    certificates: List<Certificate>
    publications: List<Publication>
    volunteer: List<Volunteer>
    languages: List<Language>
    interests: List<Interest>
    references: List<Reference>
}

class Location {
    address: String
    postalCode: String
    city: String
    region: String
    countryCode: String
}

class Profile {
    network: String
    username: String
    url: String
}

class Work {
    name: String              // company/organization
    position: String
    url: String
    location: String
    startDate: String         // ISO-8601 (e.g., 2022-03)
    endDate: String           // empty if current
    summary: String
    highlights: List<String>
}

class Education {
    institution: String
    url: String
    area: String              // field of study
    studyType: String         // degree/cert/certificate
    startDate: String
    endDate: String
    score: String             // GPA or result
    courses: List<String>
}

class Project {
    name: String
    description: String
    url: String
    roles: List<String>       // e.g., Lead iOS Dev, PM
    startDate: String
    endDate: String
    highlights: List<String>
    keywords: List<String>
}

class Skill {
    name: String              // e.g., Swift, Data Modeling
    level: String             // e.g., Beginner/Intermediate/Advanced
    keywords: List<String>    // related tools/techniques
}

class Award {
    title: String
    date: String
    awarder: String
    summary: String
    url: String
}

class Certificate {
    name: String
    date: String
    issuer: String
    url: String
    id: String                // certificate/license ID
}

class Publication {
    name: String
    publisher: String
    releaseDate: String
    url: String
    summary: String
}

class Volunteer {
    organization: String
    position: String
    url: String
    startDate: String
    endDate: String
    summary: String
    highlights: List<String>
}

class Language {
    language: String          // e.g., English
    fluency: String           // e.g., Native, Professional
}

class Interest {
    name: String              // e.g., Robotics, Sailing
    keywords: List<String>
}

class Reference {
    name: String
    relationship: String
    email: String
    phone: String
    summary: String
}
